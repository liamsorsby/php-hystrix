{
  "name": "liamsorsby/php-hystrix",
  "description": "PHP implemention of Hystrix",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Liam Sorsby",
      "email": "liam.sorsby@sky.com"
    }
  ],
  "minimum-stability": "dev",
  "require-dev": {
    "ext-redis": "^4.2.0",
    "phploc/phploc": "^4.0",
    "phpspec/phpspec": "^3.0 || ^5.0",
    "phpstan/phpstan": "^0.11.2",
    "phpunit/phpunit": "^8.0",
    "sebastian/phpcpd": "^4.1",
    "sensiolabs/security-checker": "^5.0",
    "squizlabs/php_codesniffer": "^3.4"
  },
  "require": {
    "cache/apcu-adapter": "^1.0",
    "cache/redis-adapter": "master"
  },
  "suggest": {
    "ext-redis": "^4.2.0",
    "ext-apcu": "^4.2.0"
  },
  "config": {
    "bin-dir": "bin",
    "sort-packages": true
  },
  "autoload": {
    "psr-0": {
      "liamsorsby": "src"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "security-checker security:check"
    ]
  }
}
